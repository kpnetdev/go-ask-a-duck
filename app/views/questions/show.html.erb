<div id="main_question">
  <h1><%= @question.title %></h1><br>
  <p><%= @question.body %></p><br>

  <div class="answer-list">
    <ul class="answer list-answer">
      <% @question.answers.each do |answer| %>
        <%= render :partial => 'answers/show', :locals => { :answer => answer } %>
      <% end %>
    </ul>
  </div>


<% if current_user %>
  <%= link_to "Answer this Question", "#", :class => "new-answer" %>
<% end %>


    <%= form_for [@question, @answer], remote: true, :html => {:class => 'hidden'} do |f| %>
      <%= f.text_field :title, :placeholder => "optional title" %><br>
      <%= f.text_area :body, size: "40x10", :placeholder => "type your answer here" %><br>
      <%= f.submit %>
    <% end %>

    <br>

  <%= link_to "Homepage", questions_path %>
</div>
