<%= form_for :user, url: users_path do |f| %>
  <%= f.label :username %>
  <%= f.text_field :username %>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <%= label_tag :password %>
  <%= password_field_tag :password %>
  <%= label_tag :password_confirmation %>
  <%= password_field_tag :password_confirmation %>
  <%= f.submit %>
<% end %>
